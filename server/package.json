{
  "name": "boilerplate-node-express-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel src -d dist",
    "lint": "./node_modules/.bin/eslint index.js src/** test/** --config .eslintrc",
    "lint:watch": "nodemon --exec \"npm run lint --silent\" --ignore dist",
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register --require ./test/helper.js test/**/*spec.js",
    "test:watch": "nodemon --exec \"npm run test --silent\" --ignore dist/",
    "start": "npm run build && node dist/index.js",
    "start:watch": "nodemon --exec \"npm start\" --ignore dist/",
    "start:dev": "./node_modules/.bin/babel-node src/index.js",
    "start:dev:watch":  "nodemon --exec \"npm run start:dev\" --ignore dist/",
    "dev": "node ./node_modules/parallelshell/index.js \"npm run lint:watch\" \"npm run test:watch\" \"npm run start:dev:watch\"",
    "//postinstall": "cd client && npm install && webpack -p --config webpack.prod.config.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "keywords": [],
  "author": "Domenic Matesic",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "body-parser": "^1.14.1",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "lodash": "^3.10.1",
    "webpack": "^1.12.6",
    "winston": "^2.1.1",
    "winston-loggly": "^1.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "chai": "^3.4.1",
    "dirty-chai": "^1.2.2",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.0.0",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "supertest": "^1.1.0"
  }
}
